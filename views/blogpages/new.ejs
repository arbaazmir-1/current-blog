<% layout('layout/boilerplate') %>
<div class="container mt-3">
    <div class="col-6 offset-3 ">
        <form action="/home" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <div>
            <label class="form-label" for="title">Title of Blog</label>
            <input class="form-control" type="text" name="title" id="title" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Need a Title!
            </div>
            </div>

            <div>

            <input type="file" name="image" id="image" class="form-control mt-2 mb-2">
            </div>

